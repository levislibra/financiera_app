
<openerp>
	<data>
		
		<!-- Prestamo inherit -->

		<record id="prestamo_form_inherited"  model="ir.ui.view">
			<field name="name">Extension Prestamo Form</field>
			<field name="model">financiera.prestamo</field>
			<field name="inherit_id" ref="financiera_prestamos.financiera_prestamo_form"/>
			<field name="arch" type="xml">     
				<xpath expr="//group[1]" position='before'>
					<field name="alerta_show" invisible="1"/>
					<group style="margin:0px;padding:0px;">
						<div>
							<button string="Ver alertas" name="button_alerta_show" type="object" class="oe_highlight oe_inline"
								attrs="{'invisible': [('alerta_show','=',True)]}" style="margin:2px;padding:2px;"/>
							<button string="Ocultar alertas" name="button_alerta_hide" type="object" class="oe_highlight oe_inline"
								attrs="{'invisible': [('alerta_show','=',False)]}" style="margin:2px;padding:2px;"/>
						</div>
					</group>
					<group col="10" style="margin:0px;padding:0px;" attrs="{'invisible': [('alerta_show','=',False)]}">
						<div>
							<button name="alerta_actualizar" string="Actualizar alertas" class="oe_highlight oe_inline" type="object"/>
							<label string="Ultima actualizacion:" class="oe_inline"/>
							<field name="alerta_ultima_actualizacion" style="color: red;padding-top:6px;" class="oe_inline" readonly="1"/>
						</div>
					</group>
					<label string="Datos internos" style="margin:0px;padding:0px;" attrs="{'invisible': [('alerta_show','=',False)]}"/>
					<group name='alertas' style="background-color:lightsteelblue;padding:1px;margin:0px;" col="11"
						attrs="{'invisible': [('alerta_show','=',False)]}">
						<group col="1">
							<div>
								<label string="IP no confiable" class="oe_inline"/>
								<field name='app_ip_registro_no_confiable' class="oe_inline" readonly="1"/>
							</div>
							<button string="No confiar IP" name="button_app_ip_registro_no_confiable" type="object"
								style="margin:0px;padding:0px;font-size:10px;" attrs="{'invisible': [('app_ip_registro_no_confiable','=',True)]}"
								class="oe_link"	confirm="Esta seguro que desea marcar la IP como no confiable?"/>
							<button string="Confiar en IP" name="button_app_ip_registro_confiable" type="object"
								style="margin:0px;padding:0px;font-size:10px;" attrs="{'invisible': [('app_ip_registro_no_confiable','=',False)]}"
								class="oe_link"	confirm="Esta seguro que desea marcar la IP como confiable?"/>
							<div>
								<label string="Usuario bloqueado" class="oe_inline"/>
								<field name="app_estado_bloqueado" class="oe_inline" readonly="1"/>
							</div>
							<button string="Bloquear usuario" name="button_app_estado_bloqueado" type="object"
								style="margin:0px;padding:0px;font-size:10px;" attrs="{'invisible': [('app_estado_bloqueado','=',True)]}"
								class="oe_link"	confirm="Esta seguro que desea bloquear el usuario?"/>
							<button string="Desbloquear usuario" name="button_app_estado_no_bloqueado" type="object"
								style="margin:0px;padding:0px;font-size:10px;" attrs="{'invisible': [('app_estado_bloqueado','=',False)]}"
								class="oe_link"	confirm="Esta seguro que desea desbloquear el usuario?"/>
						</group>
						<group col="1">
							<label string="Misma IP"/>
							<h2 style="color: orange;"><field name='alerta_ip_multiple_registros' readonly="1"/></h2>
							<label string="Mismo celular"/>
							<h2 style="color: orange;"><field name='alerta_celular_multiple_partner' readonly="1"/></h2>
						</group>
						<group col="1">
							<label string="Celular en contactos"/>
							<h2><field name='alerta_celular_como_contacto' readonly="1"/></h2>
							<label string="Domicilio similar"/>
							<h2><field name='alerta_domicilio_similar' readonly="1"/></h2>
						</group>
						<group col="1">
							<label string="Prestamos activos"/>
							<h4><field name='alerta_prestamos_activos'/></h4>
							<label string="Prestamos cobrados"/>
							<h4 style="color: green;"><field name='alerta_prestamos_cobrados'/></h4>
						</group>
						<group col="1">
							<label string="Cuotas activas"/>
							<h4><field name='alerta_cuotas_activas'/></h4>
							<label string="Cuotas cobradas"/>
							<h4 style="color: green;"><field name='alerta_cuotas_cobradas'/></h4>
						</group>
						<group col="1">
							<label string="Normal"/>
							<h4><field name='alerta_cuotas_normal'/></h4>
							<label string="Preventiva"/>
							<h4><field name='alerta_cuotas_preventivas'/></h4>
						</group>
						<group col="1">
							<label string="Mora temprana"/>
							<h4 style="color: orange;"><field name='alerta_cuotas_temprana'/></h4>
							<label string="Mora media"/>
							<h4 style="color: red;"><field name='alerta_cuotas_media'/></h4>
						</group>
						<group col="1">
							<label string="Mora tardia"/>
							<h4 style="color: red;"><field name='alerta_cuotas_tardia'/></h4>
							<label string="Incobrable"/>
							<h4 style="color: red;"><field name='alerta_cuotas_incobrable'/></h4>
						</group>
					</group>
					<field name="alerta_ver_y_compartir" invisible="1"/>
					<label string="Datos en otras financieras" style="margin:0px;padding:0px;" attrs="{'invisible': [('alerta_show','=',False)]}"/>
					<group style="background-color:lightsteelblue;padding:6px;margin-top:0px;"
					 attrs="{'invisible': ['|',('alerta_ver_y_compartir', '=', True),('alerta_show', '=',False)]}">
					 <label string="No esta compartiendo datos." style="margin:0px;padding:0px;"/>
					</group>
					<group name='alertas_compartidas' col="5" style="background-color:lightsteelblue;padding:6px;margin-top:0px;"
						attrs="{'invisible': ['|',('alerta_ver_y_compartir', '=', False),('alerta_show', '=',False)]}">
						<group col="1">
							<label string="Registros"/>
							<h4><field name='alerta_registrado_financieras' readonly="1"/></h4>
						</group>
						<group col="1">
							<label string="Prestamos activos"/>
							<h4><field name='alerta_prestamos_activos_financieras' readonly="1"/></h4>
						</group>
						<group col="1">
							<label string="Cuotas en mora"/>
							<h4><field name='alerta_cuotas_vencidas_financieras' readonly="1"/></h4>
						</group>
						<group col="1">
							<label string="Compromiso mensual estimado"/>
							<h4><field name='alerta_compromiso_mensual_financieras' readonly="1"/></h4>
						</group>
						<group col="1">
							<label string="IP no confiable"/>
							<h4><field name='alerta_ip_no_confiable_financieras' readonly="1"/></h4>
						</group>
					</group>
				</xpath>   
				<xpath expr="//page[@name='otra_informacion']" position='inside'>
					<group string="Respuesta Email TyC">
						<field name="respuesta_email_codigo_prestamo" readonly="1"/>
						<field name="respuesta_email_mensaje_original" readonly="1"/>
						<separator string="Estado de portal" colspan="2"/>
						<field name="state_portal" readonly="1"/>
					</group>
					<group string="Direccion y CBU">
						<field name="app_calle" readonly="0"/>
						<field name="app_altura" readonly="0"/>
						<field name="app_piso" readonly="0"/>
						<field name="app_departamento" readonly="0"/>
						<field name="app_cp" readonly="0"/>
						<field name="app_ciudad" readonly="0"/>
						<field name="app_provincia" readonly="0"/>
						<field name="app_cbu" readonly="0"/>
						<field name="app_fecha_primer_vencimiento" readonly="0"/>
					</group>
				</xpath>
				<xpath expr="//field[@name='documentation_ids']" position='replace'>
					<group>
						<field name="app_recibo_sueldo" readonly="0" filename="app_recibo_sueldo_download_name"/>
						<!-- <field name="app_recibo_sueldo_completo"/> -->
						<field name="app_recibo_sueldo_download_name" invisible="1"/>
						<!-- <field name="app_recibo_sueldo_download" string=" " readonly="1"/> -->
						
						<field name="app_servicio" readonly="0" filename="app_servicio_download_name"/>
						<!-- <field name="app_servicio_completo"/> -->
						<field name="app_servicio_download_name" invisible="1"/>
						<!-- <field name="app_servicio_download" string=" " filename="app_servicio_download_name" readonly="1"/> -->
						<field name="app_firma_preview" readonly="0" widget="image" class="oe_avatar"/>
						<field name="app_firma" string=" " readonly="0"/>
						<field name="documentation_ids"/>
					</group>
					<group>
						<field name="app_tyc" filename="app_tyc_download_name"/>
						<field name="app_tyc_download_name" invisible="1"/>
					</group>
				</xpath>
			</field>
		</record>
	</data>
</openerp>