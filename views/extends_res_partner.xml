<openerp>
    <data>
  
      <!-- Vista Form Partner -->
  
      <record id="app_partner_form_inherited"  model="ir.ui.view">
        <field name="name">App Movil Partner Extension form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="financiera_base.partner_form_inherited"/>
        <field name="arch" type="xml">
					<xpath expr="//field[@name='mobile']" position='replace'>
						<label for="mobile" string="Celular"/>
						<div>
							<field name="mobile" class="oe_inline" attrs="{'readonly': [('app_numero_celular_validado','=',True)]}"/>
							<field name="app_numero_celular_validado" class="oe_inline" readonly="1"/>
							<field name="app_codigo" readonly="1" invisible="1" class="oe_inline"/>
							<button name="wizard_datos_celular_validado_manual" string="Validar" 
								type="object" class="oe_inline"/>
						</div>
					</xpath>
        </field>
      </record>

				<!-- Ubicar DNI frontal y dorso en ficha del cliente -->

			<record id="partner_form_inherited"  model="ir.ui.view">
				<field name="name">Extension Partner form</field>
				<field name="model">res.partner</field>
				<field name="inherit_id" ref="financiera_prestamos.partner_form_inherited"/>
				<field name="arch" type="xml">
					<xpath expr="//div[1]" position='before'>
						<group name='alertas' style="background-color: lightsteelblue" col="9">
							<group col="1">
								<label string="Registros desde la misma IP"/>
								<h1 style="color: orange;"><field name='alerta_ip_multiple_registros'/></h1>
							</group>
							<group col="1">
								<label string="Clientes con el mismo celular"/>
								<h1 style="color: orange;"><field name='alerta_celular_multiple_partner'/></h1>
							</group>
							<group col="1">
								<label string="Contactos con el mismo celular"/>
								<h1><field name='alerta_celular_como_contacto'/></h1>
							</group>
							<group col="1">
								<label string="Clientes con domicilio similar"/>
								<h1><field name='alerta_domicilio_similar'/></h1>
							</group>
							<group col="1">
								<label string="Prestamos activos"/>
								<h4><field name='alerta_prestamos_activos'/></h4>
								<label string="Prestamos cobrados"/>
								<h4 style="color: green;"><field name='alerta_prestamos_cobrados'/></h4>
							</group>
							<group col="1">
								<label string="Cuotas activas"/>
								<h4><field name='alerta_cuotas_activas'/></h4>
								<label string="Cuotas cobradas"/>
								<h4 style="color: green;"><field name='alerta_cuotas_cobradas'/></h4>
							</group>
							<group col="1">
								<label string="Normal"/>
								<h4><field name='alerta_cuotas_normal'/></h4>
								<label string="Preventiva"/>
								<h4><field name='alerta_cuotas_preventivas'/></h4>
							</group>
							<group col="1">
								<label string="Mora temprana"/>
								<h4 style="color: orange;"><field name='alerta_cuotas_temprana'/></h4>
								<label string="Mora media"/>
								<h4 style="color: red;"><field name='alerta_cuotas_media'/></h4>
							</group>
							<group col="1">
								<label string="Mora tardia"/>
								<h4 style="color: red;"><field name='alerta_cuotas_tardia'/></h4>
								<label string="Incobrable"/>
								<h4 style="color: red;"><field name='alerta_cuotas_incobrable'/></h4>
							</group>
						</group>
					</xpath>
					<xpath expr="//page[5]" position='before'>
						<page name="alertas_detalle" string="Alertas">
							<group col="1">
								<group>
									<field name="alerta_ip_multiple_registros_ids">
										<tree limit="5">
											<field name="name"/>
											<field name="main_id_number"/>
											<field name="mobile"/>
											<field name="email"/>
										</tree>
									</field>
								</group>
								<group>
									<field name="alerta_celular_multiple_partner_ids">
										<tree limit="5">
											<field name="name"/>
											<field name="main_id_number"/>
											<field name="mobile"/>
											<field name="email"/>
										</tree>
									</field>
								</group>
								<group>
									<field name="alerta_celular_como_contacto_ids">
										<tree limit="5">
											<field name="name"/>
											<field name="relacion"/>
											<field name="movil"/>
											<field name="email"/>
										</tree>
									</field>
								</group>
								<group>
									<field name="alerta_domicilio_similar_ids">
										<tree limit="5">
											<field name="name"/>
											<field name="main_id_number"/>
											<field name="mobile"/>
											<field name="email"/>
										</tree>
									</field>
								</group>
							</group>
						</page>
					</xpath>
					<xpath expr="//group[@name='risk']" position='before'>
						<group string="Portal y App movil" col="3" style="background-color: #F2F2F2">
							<group>
								<separator string="Alta de cliente" colspan="2"/>
									<field name="app_estado_portal" string="Estado del alta"/>
									<field name="app_estado_bloqueado"/>
									<field name="app_ip_registro"/>
								<separator string="DNI y selfie" colspan="2"/>
									<field name="app_dni_frontal" widget="image" class="oe_avatar" readonly="0"/>
									<field name="app_dni_frontal_download_name" invisible="1"/>
									<field name="app_dni_frontal_download" string=" " filename="app_dni_frontal_download_name" readonly="1"/>

									<field name="app_dni_posterior" widget="image" class="oe_avatar" readonly="0"/>
									<field name="app_dni_posterior_download_name" invisible="1"/>
									<field name="app_dni_posterior_download" string=" " filename="app_dni_posterior_download_name" readonly="1"/>
									
									<field name="app_selfie" widget="image" class="oe_avatar" readonly="0"/>
									<field name="app_selfie_download_name" invisible="1"/>
									<field name="app_selfie_download" string=" " filename="app_selfie_download_name" readonly="1"/>
							</group>
							<group col="1">
								<group>
									<separator string="Datos personales" colspan="2"/>
										<field name="app_nombre"/>
										<field name="app_apellido"/>
										<field name="app_documento"/>
										<field name="app_nacimiento"/>
										<field name="app_edad"/>
									<!-- <separator string="Datos de domicilio" colspan="2"/>
										<field name="app_direccion"/>
										<field name="app_numero"/>
										<field name="app_cp"/>
										<field name="app_telefono"/>
										<field name="app_localidad"/>
										<field name="app_provincia"/> -->
									<separator string="CBU" colspan="2"/>
										<field name="app_cbu"/>
										<field name="app_alias"/>
									<separator string="Numero de celular" colspan="2"/>
										<field name="app_numero_celular"/>
								</group>
								<group string="Otros" col="1">
									<field name="app_observaciones"/>
								</group>
							</group>
							<group>
                <separator string="Datos de ingresos" colspan="2"/>
                  <field name="app_ingreso"/>
                  <field name="app_cuotas"/>
                  <field name="app_ingreso_pareja"/>
                  <field name="app_otros_ingresos"/>
                  <field name="app_asignaciones"/>
                  <field name="app_ocupacion"/>
                  <field name="app_puesto"/>
                <separator string="Datos de vivianda y transporte" colspan="2"/>
                  <field name="app_vivienda"/>
                  <field name="app_alquiler"/>
                  <field name="app_hipoteca"/>
                  <field name="app_vivienda_tiempo"/>
                  <field name="app_vivienda_conviven"/>
                  <field name="app_vivienda_hijos"/>
                  <field name="app_transporte"/>
                  <field name="app_prendario"/>
							</group>
						</group>
					</xpath>
				</field>
			</record>
  
    </data>
  </openerp>